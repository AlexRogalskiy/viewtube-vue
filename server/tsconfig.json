{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["ESNext", "ES2020", "DOM", "ESNext.AsyncIterable"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "viewtube": ["../"],
      "viewtube/*": ["../*"],
      "server": ["./"],
      "server/*": ["./*"]
    },
    "types": ["@types/node", "@types/jest", "@sentry/types"]
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/.yarn",
    "../client/node_modules",
    "client/node_modules"
  ]
}
